package ejercicio1;

import java.util.Scanner;

public class Ejercicio {

	public static void main(String[] args) {

		double numeros[] = new double[5];
		long resultado;

		Scanner scanner = new Scanner(System.in);

		try {

			for (int i = 0; i < 5; i++) {
				System.out.print("Ingresa el valor #" + (i + 1) + ": ");
				numeros[i] = scanner.nextDouble();
				System.gc();
			}

			resultado = numeros[0] * numeros[1];

			for (int i = 2; i < numeros.length; i++) {

				resultado *= numeros[i];
				System.gc();

			}

			double resultadoDecimal;

			if (resultado % 2 == 0) {
				resultado = resultado / 2;
				resultado += 500;
				resultado *= 0.5;

				System.out.println(resultado);
			} else {
				resultadoDecimal = resultado / 2;
				resultadoDecimal += 500;
				resultadoDecimal *= 0.5;

				System.out.println(resultadoDecimal);
			}

		} catch (Exception e) {
			System.err.println("Opcion invalida, intenta mÃ¡s tarde...");
		}
	}

}
